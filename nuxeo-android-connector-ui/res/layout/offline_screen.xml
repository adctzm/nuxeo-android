<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="2dip">

	<TextView android:id="@+id/networkStatusLabel"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:textSize="16dip" android:text="Network status:" />

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal">
		<CheckBox android:layout_height="30dip" android:id="@+id/networkReachableChk"
			android:layout_alignParentLeft="true" android:text="Network reachable" android:editable="false"
			android:layout_weight="1" android:layout_width="fill_parent"
			android:textSize="11dip"></CheckBox>
		<CheckBox android:layout_height="30dip" android:id="@+id/serverReachableChk"
			android:layout_alignParentLeft="true" android:text="Nuxeo Server reachable"
			android:layout_weight="1" android:editable="false" android:layout_width="fill_parent"
			android:textSize="11dip"></CheckBox>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal">
		<CheckBox android:layout_weight="1" android:layout_height="30dip" android:layout_width="fill_parent"
			android:id="@+id/forceOfflineChk" android:layout_alignParentLeft="true"
			android:text="Force Offline"
			android:textSize="12dip"></CheckBox>
		<Button android:id="@+id/refreshBtn" android:layout_width="fill_parent"
			android:layout_height="40dip" android:layout_weight="1" android:text="Refresh Screen"
			android:padding="0px" android:textSize="12dip" />
	</LinearLayout>

	<ScrollView android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="fill_parent">

			<TextView android:id="@+id/cacheLabel" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:textSize="16dip"
				android:text="Caching info:" />
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="horizontal">

				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:layout_weight="1"
					android:orientation="vertical">
					<TextView android:id="@+id/cacheEntriesCount"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:textSize="12dip" />
					<TextView android:id="@+id/cacheSize"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:textSize="12dip" />
				</LinearLayout>
				<Button android:id="@+id/clearCacheBtn" android:layout_width="fill_parent"
					android:text="Clear Cache" android:layout_height="40dip"
					android:layout_weight="1" android:padding="0px" android:textSize="12dip" />
			</LinearLayout>

			<TextView android:id="@+id/pendingLabel"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:textSize="16dip" android:text="Pending updates :" />

			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="horizontal">

				<TextView android:id="@+id/pendingUpdatesCount"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:textSize="12dip" android:layout_weight="1" />
				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:layout_weight="1"
					android:orientation="vertical">
					<Button android:id="@+id/execPendingBtn"
						android:layout_width="fill_parent" android:text="Execute pending updates"
						android:layout_height="40dip" android:padding="0px"
						android:textSize="12dip" />
					<Button android:id="@+id/clearPendingBtn"
						android:layout_width="fill_parent" android:text="Discard pending updates"
						android:layout_height="40dip" android:padding="0px"
						android:textSize="12dip" />
				</LinearLayout>

			</LinearLayout>

			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="horizontal">

				<TextView android:id="@+id/pendingUploadCount"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:textSize="12dip" android:layout_weight="1" />
				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:layout_weight="1"
					android:orientation="vertical">
					<Button android:id="@+id/clearPendingUploadBtn"
						android:layout_width="fill_parent" android:text="Discard pending uploads"
						android:layout_height="40dip" android:padding="0px"
						android:textSize="12dip" />
				</LinearLayout>

			</LinearLayout>

			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="horizontal">

				<TextView android:id="@+id/transientStateCount"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:textSize="12dip" android:layout_weight="1" />
				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:layout_weight="1"
					android:orientation="vertical">
					<Button android:id="@+id/clearTransientStateBtn"
						android:layout_width="fill_parent" android:text="Discard pending uploads"
						android:layout_height="40dip" android:padding="0px"
						android:textSize="12dip" />
				</LinearLayout>

			</LinearLayout>

			<TextView android:id="@+id/blobCacheLabel"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:textSize="16dip" android:text="Blob caches :" />

			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="horizontal">
				<TextView android:id="@+id/iconCacheSize"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:textSize="12dip" android:text="XXX Ko"
					android:layout_weight="1" />
				<Button android:id="@+id/clearIconCache"
					android:layout_width="fill_parent" android:text="Clear Icon cache"
					android:layout_height="40dip" android:layout_weight="1"
					android:padding="0px" android:textSize="12dip" />
			</LinearLayout>
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="horizontal">
				<TextView android:id="@+id/blobCacheSize"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:textSize="12dip" android:text="XXX Ko"
					android:layout_weight="1" />
				<Button android:id="@+id/clearBlobCache"
					android:layout_width="fill_parent" android:text="Clear Blob cache"
					android:layout_height="40dip" android:layout_weight="1"
					android:padding="0px" android:textSize="12dip" />
			</LinearLayout>
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="horizontal">
				<TextView android:id="@+id/layoutCacheSize"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:textSize="12dip" android:text="XXX Ko"
					android:layout_weight="1" />
				<Button android:id="@+id/clearLayoutCache"
					android:layout_width="fill_parent" android:text="Clear Blob cache"
					android:layout_height="40dip" android:layout_weight="1"
					android:padding="0px" android:textSize="12dip" />
			</LinearLayout>
			
			
			<LinearLayout android:layout_width="fill_parent"
			    android:paddingTop="20dip"
				android:layout_height="wrap_content" android:orientation="horizontal">
				<TextView android:id="@+id/pictureCacheSize"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:textSize="12dip" android:text="XXX Ko"
					android:layout_weight="1" />
				<Button android:id="@+id/clearPictureCache"
					android:layout_width="fill_parent" android:text="Clear Picture cache"
					android:layout_height="40dip" android:layout_weight="1"
					android:padding="0px" android:textSize="12dip" />
			</LinearLayout>
			<LinearLayout android:layout_width="fill_parent"
			    android:paddingTop="20dip"
				android:layout_height="wrap_content" android:orientation="horizontal">
				<TextView android:id="@+id/AllCacheSize"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:textSize="12dip" android:text="XXX Ko"
					android:layout_weight="1" />
				<Button android:id="@+id/clearAllCache"
					android:layout_width="fill_parent" android:text="Clear All cache"
					android:layout_height="40dip" android:layout_weight="1"
					android:padding="0px" android:textSize="12dip" />
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>