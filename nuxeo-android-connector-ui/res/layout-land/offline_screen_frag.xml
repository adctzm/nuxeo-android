<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dip"
    tools:context="org.nuxeo.android.settingsfragments.SettingsActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="2dip"
        tools:context="org.nuxeo.android.settingsfragments.SettingsActivity" >

        <fragment
            android:id="@+id/server_settings_frag"
            android:name="org.nuxeo.android.automation.fragments.ServerSettingsFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <fragment
            android:id="@+id/network_settings_frag"
            android:name="org.nuxeo.android.automation.fragments.NetworkSettingsFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</ScrollView>