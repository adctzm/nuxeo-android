<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="2dip"
    android:id="@+id/listViewContainer"
    >
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    >
    <TextView android:id="@+id/waitingMessage"       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
    <ImageButton android:id="@+id/refreshBtn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="10dp" android:src="@drawable/android:stat_notify_sync" android:background="@drawable/android:btn_default_small"></ImageButton>
  </LinearLayout>

<ListView
       android:id="@+id/myList"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content" />
</LinearLayout>
